<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/cardView_margin"
    android:layout_marginTop="@dimen/cardView_margin"

    android:layout_marginRight="@dimen/cardView_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/cardView_padding">

        <TextView
            android:id="@+id/task_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/task_text_margin"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="Title" />

        <TextView
            android:id="@+id/task_date_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/task_text_margin"
            android:textColor="@color/colorDate"
            android:textSize="@dimen/text_date_size"
            app:layout_constraintLeft_toRightOf="@id/task_title_textView"
            app:layout_constraintBottom_toBottomOf="@id/task_title_textView"
            android:layout_marginBottom="@dimen/task_date_margin"
            tools:text="Date" />

        <TextView
            android:id="@+id/task_description_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/task_text_margin"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_description_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_title_textView"
            tools:text="Description" />

        <TextView
            android:id="@+id/task_priority_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/task_text_margin"
            android:layout_marginEnd="@dimen/task_text_margin"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>